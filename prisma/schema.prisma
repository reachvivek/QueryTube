// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  videos        Video[]
  sessions      Session[]
  accounts      Account[]

  @@index([email])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  token        String   @unique
  userId       String
  expiresAt    DateTime
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

model Video {
  id                String   @id @default(uuid())
  userId            String   // Owner of this video
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  youtubeUrl        String?
  youtubeId         String?  @unique
  title             String
  description       String?
  duration          Int // in seconds
  durationFormatted String
  thumbnail         String?
  uploader          String?
  language          String   @default("en")

  // Processing status
  status            String   @default("pending") // pending, processing, completed, failed
  errorMessage      String?

  // Transcript source
  transcriptSource  String?  // youtube-captions, whisper-api, uploaded-file
  transcript        String?  // Full transcript text
  summary           String?  // AI-generated summary of video content

  // File info
  audioFilePath     String?
  audioFileSize     Int?     // in bytes

  // Timestamps
  uploadedAt        DateTime @default(now())
  processedAt       DateTime?

  // Relations
  chunks            Chunk[]
  macroChunks       MacroChunk[]
  analytics         Analytics[]

  @@index([status])
  @@index([youtubeId])
  @@index([userId])
}

model Chunk {
  id          String   @id @default(uuid())
  videoId     String
  video       Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  chunkIndex  Int
  text        String
  startTime   Int      // in seconds
  endTime     Int      // in seconds
  timestamp   String   // formatted timestamp (e.g., "00:12:34")

  // NOTE: Chunks are small segments (1-6s) for timestamp precision
  // Legacy: vectorId kept for backward compatibility - prefer MacroChunk for new embeddings
  vectorId           String?  @unique  // Pinecone vector ID (legacy)
  embeddingProvider  String?  // mistral, openai (legacy)

  createdAt   DateTime @default(now())

  @@index([videoId])
  @@index([vectorId])
  @@unique([videoId, chunkIndex])
}

model MacroChunk {
  id                  String   @id @default(uuid())
  videoId             String
  video               Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  chunkIndex          Int      // index of this macro chunk
  text                String   // combined text from multiple segments
  startTime           Int      // in seconds
  endTime             Int      // in seconds
  timestamp           String   // formatted start timestamp

  // References to original segments
  segmentStartIndex   Int      // first segment index in this chunk
  segmentEndIndex     Int      // last segment index in this chunk

  // Vector database references
  vectorId            String?  @unique  // Pinecone vector ID
  embeddingProvider   String?  // mistral, openai

  createdAt           DateTime @default(now())

  @@index([videoId])
  @@index([vectorId])
  @@unique([videoId, chunkIndex])
}

model Analytics {
  id           String   @id @default(uuid())
  videoId      String
  video        Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  question     String
  answer       String
  responseTime Float    // in seconds

  // AI provider tracking
  provider     String   // groq, openai, claude - which provider handled the Q&A
  model        String   // llama-3.3-70b-versatile, gpt-4o-mini, etc.

  // Retrieved chunks info
  chunksUsed   Int      @default(0)

  timestamp    DateTime @default(now())

  @@index([videoId])
  @@index([timestamp])
  @@index([provider])
}
